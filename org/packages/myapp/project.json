{
  "name": "myapp",
  "sourceRoot": "packages/myapp/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/myapp/dist",
        "main": "packages/myapp/src/index.ts",
        "tsConfig": "packages/myapp/tsconfig.lib.json",
        "transformers": [{ "name": "typescript-transform-paths/nx-transformer" }]
      },
      "dependsOn": ["^build"]
    }
  },
  "implicitDependencies": ["util"]
}
